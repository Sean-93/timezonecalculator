<script>
  // MAKES SURE THAT THE MOBILE DROPDOWN CAN CLICK OFF OR CLICK ON THE BUTTON TO CLOSE
  // ALSO MAKES SURE THAT THE 'menu' ICON IS CHANGED TO A 'close' ICON WHEN APPROPRIATE
  const menuButton = document.getElementById("menuButton");
  const dropdownContent = document.querySelector(".dropdown-content");
  const menuIcon = document.getElementById("menuIcon");

  // Toggle dropdown on click and change icon
  menuButton.addEventListener("click", (e) => {
    e.stopPropagation(); // Prevent closing immediately
    dropdownContent.classList.toggle("hidden");
    menuIcon.textContent = dropdownContent.classList.contains("hidden")
      ? "menu"
      : "close";
  });

  // Close dropdown when clicking outside and reset icon
  document.addEventListener("click", (e) => {
    if (
      !menuButton.contains(e.target as Node) &&
      !dropdownContent.contains(e.target as Node)
    ) {
      dropdownContent.classList.add("hidden");
      menuIcon.textContent = "menu"; // Reset to 'menu' when closed
    }
  });
</script>
